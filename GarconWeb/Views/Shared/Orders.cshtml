@model IEnumerable<GarconDomain.Models.OrderItem>

<p>
    @Html.ActionLink("Place Order", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderItemStatusId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderItemStatusName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MenuItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderItemStatusId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderItemStatusName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuItemId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
